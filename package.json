    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "lerna": "5.4.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "stylelint": "14.10.0",
